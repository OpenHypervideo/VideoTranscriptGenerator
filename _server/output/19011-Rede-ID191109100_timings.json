   ]
  }, 
  {
   "begin": "127.680", 
   "children": [], 
   "end": "128.320", 
   "id": "s000037", 
   "language": "deu", 
   "lines": [
    "nat\u00fcrlich, "
   ]
  }, 
  {
   "begin": "128.320", 
   "children": [], 
   "end": "131.160", 
   "id": "s000038", 
   "language": "deu", 
   "lines": [
    "Sie belegen alle Einkommensarten, "
   ]
  }, 
  {
   "begin": "131.160", 
   "children": [], 
   "end": "133.600", 
   "id": "s000039", 
   "language": "deu", 
   "lines": [
