   "begin": "5.520", 
   "children": [], 
   "end": "6.840", 
   "id": "s000003", 
   "language": "deu", 
   "lines": [
    "Liebe Kollegen! "
   ]
  }, 
  {
   "begin": "6.840", 
   "children": [], 
   "end": "8.200", 
   "id": "s000004", 
   "language": "deu", 
   "lines": [
    "Planwirtschaft wollen wir nicht, "
   ]
  }, 
  {
   "begin": "8.200", 
   "children": [], 
   "end": "11.280", 
   "id": "s000005", 
   "language": "deu", 
   "lines": [
