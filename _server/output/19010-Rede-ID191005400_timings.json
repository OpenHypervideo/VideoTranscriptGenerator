  }, 
  {
   "begin": "77.960", 
   "children": [], 
   "end": "78.760", 
   "id": "s000029", 
   "language": "deu", 
   "lines": [
    "die ergriffen werden muss, "
   ]
  }, 
  {
   "begin": "78.760", 
   "children": [], 
   "end": "84.160", 
   "id": "s000030", 
   "language": "deu", 
   "lines": [
