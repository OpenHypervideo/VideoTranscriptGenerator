  }, 
  {
   "begin": "351.080", 
   "children": [], 
   "end": "353.040", 
   "id": "s000107", 
   "language": "deu", 
   "lines": [
    "diejenigen, "
   ]
  }, 
  {
   "begin": "353.040", 
   "children": [], 
   "end": "355.000", 
   "id": "s000108", 
   "language": "deu", 
   "lines": [
