   ]
  }, 
  {
   "begin": "360.840", 
   "children": [], 
   "end": "362.120", 
   "id": "s000142", 
   "language": "deu", 
   "lines": [
    "das ist mein Sohn\u00a0\u2013, "
   ]
  }, 
  {
   "begin": "362.120", 
   "children": [], 
   "end": "363.800", 
   "id": "s000143", 
   "language": "deu", 
