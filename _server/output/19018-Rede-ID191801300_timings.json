   ]
  }, 
  {
   "begin": "266.880", 
   "children": [], 
   "end": "268.280", 
   "id": "s000105", 
   "language": "deu", 
   "lines": [
    "um nicht zu sagen Quark,"
   ]
  }, 
  {
   "begin": "268.280", 
   "children": [], 
   "end": "269.120", 
   "id": "s000106", 
   "language": "deu", 
   "lines": [
    "\u2013\u00a0sagt Lammert\u00a0\u2013"
   ]
  }, 
  {
   "begin": "269.120", 
   "children": [], 
   "end": "269.920", 
   "id": "s000107", 
   "language": "deu", 
   "lines": [
