  }, 
  {
   "begin": "75.360", 
   "children": [], 
   "end": "76.520", 
   "id": "s000025", 
   "language": "deu", 
   "lines": [
    "Ich sage Ihnen: "
   ]
  }, 
  {
   "begin": "76.520", 
   "children": [], 
   "end": "78.920", 
   "id": "s000026", 
   "language": "deu", 
   "lines": [
