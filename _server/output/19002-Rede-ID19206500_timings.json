  }, 
  {
   "begin": "60.000", 
   "children": [], 
   "end": "62.640", 
   "id": "s000020", 
   "language": "deu", 
   "lines": [
    "Zwei Monate sp\u00e4ter, "
   ]
  }, 
  {
   "begin": "62.640", 
   "children": [], 
   "end": "63.600", 
   "id": "s000021", 
   "language": "deu", 
   "lines": [
    "genau heute\u00a0\u2013 "
   ]
  }, 
  {
   "begin": "63.600", 
   "children": [], 
   "end": "66.040", 
   "id": "s000022", 
   "language": "deu", 
   "lines": [
