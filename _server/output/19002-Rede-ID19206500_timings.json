   ]
  }, 
  {
   "begin": "38.840", 
   "children": [], 
   "end": "40.920", 
   "id": "s000011", 
   "language": "deu", 
   "lines": [
    "nichts vonseiten der Bundeskanzlerin, "
   ]
  }, 
  {
   "begin": "40.920", 
   "children": [], 
   "end": "43.000", 
   "id": "s000012", 
   "language": "deu", 
   "lines": [
