   "end": "2.600", 
   "id": "s000001", 
   "language": "deu", 
   "lines": [
    "Sehr geehrter Herr Pr\u00e4sident! "
   ]
  }, 
  {
   "begin": "2.600", 
   "children": [], 
   "end": "3.680", 
   "id": "s000002", 
   "language": "deu", 
   "lines": [
