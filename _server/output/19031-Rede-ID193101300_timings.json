  }, 
  {
   "begin": "476.720", 
   "children": [], 
   "end": "477.600", 
   "id": "s000167", 
   "language": "deu", 
   "lines": [
    "Herzlichen Dank."
   ]
  }, 
  {
   "begin": "477.600", 
   "children": [], 
   "end": "481.000", 
   "id": "s000168", 
