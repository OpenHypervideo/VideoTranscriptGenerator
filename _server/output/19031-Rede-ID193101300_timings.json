   ]
  }, 
  {
   "begin": "411.200", 
   "children": [], 
   "end": "411.960", 
   "id": "s000142", 
   "language": "deu", 
   "lines": [
    "den wir erreicht haben, "
   ]
  }, 
  {
   "begin": "411.960", 
   "children": [], 
   "end": "413.560", 
   "id": "s000143", 
   "language": "deu", 
