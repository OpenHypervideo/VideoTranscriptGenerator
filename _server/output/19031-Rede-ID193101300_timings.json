  {
   "begin": "460.840", 
   "children": [], 
   "end": "461.280", 
   "id": "s000162", 
   "language": "deu", 
   "lines": [
    "werden wir diesen\u00a0\u2013 "
   ]
  }, 
  {
   "begin": "461.280", 
   "children": [], 
   "end": "462.000", 
   "id": "s000163", 
   "language": "deu", 
   "lines": [
