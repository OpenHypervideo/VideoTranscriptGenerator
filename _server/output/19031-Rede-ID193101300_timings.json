  }, 
  {
   "begin": "283.200", 
   "children": [], 
   "end": "283.880", 
   "id": "s000093", 
   "language": "deu", 
   "lines": [
    "Es ist gut, "
   ]
  }, 
  {
   "begin": "283.880", 
   "children": [], 
   "end": "284.960", 
   "id": "s000094", 
   "language": "deu", 
   "lines": [
