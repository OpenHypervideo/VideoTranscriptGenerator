   "id": "s000001", 
   "language": "deu", 
   "lines": [
    "Frau Pr\u00e4sidentin! "
   ]
  }, 
  {
   "begin": "3.280", 
   "children": [], 
   "end": "5.520", 
   "id": "s000002", 
   "language": "deu", 
   "lines": [
    "Liebe Kolleginnen und Kollegen! "
   ]
  }, 
  {
   "begin": "5.520", 
   "children": [], 
   "end": "6.640", 
   "id": "s000003", 
   "language": "deu", 
   "lines": [
    "Frau Bull-Bischoff, "
   ]
  }, 
  {
   "begin": "6.640", 
   "children": [], 
   "end": "8.560", 
   "id": "s000004", 
   "language": "deu", 
   "lines": [
    "Sie haben so sch\u00f6n gesagt: "
   ]
  }, 
  {
   "begin": "8.560", 
   "children": [], 
   "end": "9.720", 
   "id": "s000005", 
   "language": "deu", 
   "lines": [
