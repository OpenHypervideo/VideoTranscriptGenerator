   ]
  }, 
  {
   "begin": "41.040", 
   "children": [], 
   "end": "41.320", 
   "id": "s000028", 
   "language": "deu", 
   "lines": [
    "\u2013\u00a0Ja, "
   ]
  }, 
  {
   "begin": "41.320", 
   "children": [], 
   "end": "42.360", 
   "id": "s000029", 
   "language": "deu", 
   "lines": [
    "aber manchmal hilft es, "
   ]
  }, 
  {
   "begin": "42.360", 
   "children": [], 
   "end": "44.080", 
   "id": "s000030", 
   "language": "deu", 
   "lines": [
    "teuer zu helfen, "
   ]
  }, 
  {
   "begin": "44.080", 
   "children": [], 
   "end": "47.320", 
   "id": "s000031", 
   "language": "deu", 
   "lines": [
