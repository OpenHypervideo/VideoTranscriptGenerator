  }, 
  {
   "begin": "236.920", 
   "children": [], 
   "end": "238.200", 
   "id": "s000068", 
   "language": "deu", 
   "lines": [
    "die Kommunalparlamente, "
   ]
  }, 
  {
   "begin": "238.200", 
   "children": [], 
   "end": "239.360", 
   "id": "s000069", 
   "language": "deu", 
   "lines": [
