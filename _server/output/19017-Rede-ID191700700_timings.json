  }, 
  {
   "begin": "126.880", 
   "children": [], 
   "end": "128.720", 
   "id": "s000031", 
   "language": "deu", 
   "lines": [
    "gemeinsam umsetzen k\u00f6nnen. "
   ]
  }, 
  {
   "begin": "128.720", 
   "children": [], 
   "end": "130.000", 
   "id": "s000032", 
   "language": "deu", 
   "lines": [
    "Klar ist auch: "
   ]
  }, 
  {
   "begin": "130.000", 
   "children": [], 
   "end": "135.040", 
   "id": "s000033", 
   "language": "deu", 
   "lines": [
