   "id": "s000001", 
   "language": "deu", 
   "lines": [
    "Puh, "
   ]
  }, 
  {
   "begin": "0.520", 
   "children": [], 
   "end": "13.760", 
   "id": "s000002", 
   "language": "deu", 
   "lines": [
