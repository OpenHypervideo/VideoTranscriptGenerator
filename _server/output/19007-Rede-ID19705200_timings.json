  {
   "begin": "242.320", 
   "children": [], 
   "end": "243.720", 
   "id": "s000090", 
   "language": "deu", 
   "lines": [
    "n\u00e4mlich zu 5\u00a0Prozent Verm\u00f6gensteuer. "
   ]
  }, 
  {
   "begin": "243.720", 
   "children": [], 
   "end": "245.520", 
