  }, 
  {
   "begin": "180.440", 
   "children": [], 
   "end": "181.320", 
   "id": "s000058", 
   "language": "deu", 
   "lines": [
    "dass man sagt, "
   ]
  }, 
  {
   "begin": "181.320", 
   "children": [], 
   "end": "184.360", 
   "id": "s000059", 
   "language": "deu", 
   "lines": [
