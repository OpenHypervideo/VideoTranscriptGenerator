   "begin": "10.440", 
   "children": [], 
   "end": "10.640", 
   "id": "s000003", 
   "language": "deu", 
   "lines": [
    "Ihnen, "
   ]
  }, 
  {
   "begin": "10.640", 
   "children": [], 
   "end": "11.840", 
   "id": "s000004", 
   "language": "deu", 
   "lines": [
    "Frau Ministerin, "
   ]
  }, 
  {
   "begin": "11.840", 
   "children": [], 
   "end": "15.080", 
   "id": "s000005", 
   "language": "deu", 
   "lines": [
